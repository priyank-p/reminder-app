<div class="reminders">
  {{#each reminders}}
    <div class="reminder" data-id="{{ id }}" title="{{ title }}">
      <div class="title">{{title}}</div>
      <div class="delete-reminder fas fa-minus-circle"></div>
      <div class="content">{{{preserve_whitespace reminder}}}</div>
      <div class="due-date">{{format_due_date due_date}}</div>
    </div>
  {{/each}}

  {{!-- If there are no reminders --}}
  {{#unless reminders}}
    <h4 class="no-reminders">No reminder(s) have been added yet!</h4>
    <div class="no-reminders">
      Go Ahead, and click `a` or click the add button on
      bottom-right corner, to open add reminder modal, and add a reminder.
    </div>
  {{/unless}}
</div>
