#!/usr/bin/env node
'use strict';

const run = require('./run');
const env = require('../app/env');
const needToMigrate = require('./migration-status');

env.setEnv('mode', 'devlopment');
(async function dev_server() {
  if (needToMigrate) {
    await run('./run-migrations');
  }

  require('./dev-server.js');
})();
